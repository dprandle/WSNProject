{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Upload Target to MSP",
            "type":"shell",
            "command": "${workspaceFolder}/mspdebug.sh tilib \"prog ${command:cmake.launchTargetPath}\"",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "showReuseMessage": true,
                "clear": true,
                "focus": true
            },
            "problemMatcher":[]
        },
        {
            "label": "Show Target Size",
            "type":"shell",
            "command": "${env:HOME}/ti/msp430-gcc/bin/msp430-elf-size ${command:cmake.launchTargetPath}",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "showReuseMessage": true,
                "clear": true,
                "focus": true
            },
            "problemMatcher":[]
        }
    ]
}