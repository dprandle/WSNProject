{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Upload Target to MSP",
            "type":"shell",
            "command": "${workspaceFolder}/mspdebug.sh --allow-fw-update -d ${input:selected_board} tilib \"prog ${command:cmake.launchTargetPath}\"",
            "group": "none",
            "options": {},
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "showReuseMessage": true,
                "clear": true,
                "focus": true
            },
            "problemMatcher":[]
        },
        {
            "label": "Show Target Size",
            "type":"shell",
            "command": "${env:HOME}/ti/msp430-gcc/bin/msp430-elf-size -d ${input:selected_board} ${command:cmake.launchTargetPath}",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "showReuseMessage": true,
                "clear": true,
                "focus": true
            },
            "problemMatcher":[]
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "description": "Which board?",
            "id": "selected_board",
            "options": [
                "/dev/ttyACM0",
                "/dev/ttyACM2"
            ],
            "default": "/dev/ttyACM0"
        }
    ]
}